{
  "name": "Funimation Binge Watch Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Skip intros on Funimation and skip to next episode at set times (via options in the extension). ",
  "homepage_url": "https://github.com/waldmannly",
  "icons": {
    "16": "icons/favicon.png",
    "48": "icons/favicon.png",
    "128": "icons/favicon.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "contentSettings",
    "notifications",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.funimation.com/shows/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}